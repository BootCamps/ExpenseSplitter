<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	
   <persistence-unit name="EXPENSE_SPLITTER" transaction-type="RESOURCE_LOCAL">
 	 <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider> 
		<shared-cache-mode>NONE</shared-cache-mode>
    
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
      <property name="javax.persistence.jdbc.url"    value="jdbc:h2:~/EXPENSE_SPLITTER;MODE=MSSQLServer;USER=admin;PASSWORD=admin;AUTO_SERVER=TRUE;" />
      <property name="javax.persistence.jdbc.user" value="sa" />
      <property name="javax.persistence.jdbc.password" value="" />
	  <property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
	  <property name="eclipselink.ddl-generation.output-mode" value="database" />
	  <property name="eclipselink.logging.level" value="CONFIG" />
	  <property name="eclipselink.logging.level.sql" value="CONFIG" />
	  <property name="eclipselink.logging.parameters" value="true" />
	  <property name="eclipselink.query-results-cache" value="false" />
	  <property name="eclipselink.jdbc.bind-parameters" value="true" />
	  <property name="eclipselink.jdbc.native-sql" value="true" />
	  <property name="eclipselink.jdbc.cache-statements" value="true" />
	  <property name="eclipselink.jdbc.cache-statements.size"	value="500"/>
    </properties>
  </persistence-unit> 
  
</persistence>
